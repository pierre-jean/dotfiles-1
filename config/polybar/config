[module/pomodoro]
type = custom/script
; Use pomodoro glyphs in Nerd fonts
exec = pymodoro --break-prefix " " --pomodoro-prefix " " --pomodoro  --empty " " --break  --length 5 -sp ~/dotfiles/config/i3status/pomodoro.mp3 -sb ~/dotfiles/config/i3status/pomodoro.mp3 
label = %output%
tail = true
interval = 1
; Start or reset the timer
click-left = if [ -f ~/.pomodoro_session ]; then rm ~/.pomodoro_session; else echo "25 5" > ~/.pomodoro_session; fi
; reset timer
click-right = if [ -f ~/.pomodoro_session ]; then rm ~/.pomodoro_session; fi
; Reduce pomodoro time
click-middle = echo "$((`cut .pomodoro_session -d ' ' -f 1`-5)) 5" > .pomodoro_session

